{
  "extends": [
    "config:base",
    "schedule:weekends",
    "docker:disable"
  ],
  "reviewers": [
    "team:cloud_backend"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^golang.org/x/",
        "google.golang.org/genproto"
      ],
      "schedule": [
        "on the first day of the month"
      ]
    },
    {
      "matchPackagePatterns": [
        "^github.com/seqsense/"
      ],
      "schedule": [
        "at any time"
      ]
    },
    {
      "matchPackagePatterns": [
        "^github.com/aws/aws-sdk-go",
        "^github.com/golang/protobuf",
        "^google.golang.org/grpc"
      ],
      "separateMinorPatch": true
    },
    {
      "matchPackagePatterns": [
        "^github.com/aws/aws-sdk-go",
        "^github.com/golang/protobuf",
        "^google.golang.org/grpc"
      ],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ],
  "timezone": "Asia/Tokyo"
}
