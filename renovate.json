{
  "extends": [
    "config:recommended",
    "schedule:weekends",
    "docker:disable"
  ],
  "reviewers": [
    "team:cloud_backend"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "schedule": [
        "on the first day of the month"
      ],
      "matchPackageNames": [
        "/^golang.org/x//",
        "/google.golang.org/genproto/"
      ]
    },
    {
      "schedule": [
        "at any time"
      ],
      "matchPackageNames": [
        "/^github.com/seqsense//"
      ]
    },
    {
      "separateMinorPatch": true,
      "matchPackageNames": [
        "/^github.com/aws/aws-sdk-go/",
        "/^github.com/golang/protobuf/",
        "/^google.golang.org/grpc/"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/^github.com/aws/aws-sdk-go/",
        "/^github.com/golang/protobuf/",
        "/^google.golang.org/grpc/"
      ]
    }
  ],
  "ignorePaths": [],
  "ignoreDeps": [
    "github.com/seqsense/kinesisvideomanager"
  ],
  "timezone": "Asia/Tokyo"
}
